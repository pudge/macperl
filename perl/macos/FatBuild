#
# FatBuild <Name> <PPC> <68K> - Build a fat binary from a PowerPC and a 68K build
#
# $Log$

Set Name 		"{1}"
Set SuffPPC	 	{2}
Set Suff68K	 	{3}

Duplicate -y "{Name}".{SuffPPC} "{Name}"
If {Suff68K} == 68K
	Begin
		Echo 'Include "'"{Name}"'.68K" '''CODE''';'
		Echo 'Include "'"{Name}"'.68K" '''DATA''';'
	End | Rez -a -o "{Name}"
Else
	Begin
		Echo 'Include "'"{Name}"'.SC" '''CODE''';'
	End | Rez -a -o "{Name}"
End